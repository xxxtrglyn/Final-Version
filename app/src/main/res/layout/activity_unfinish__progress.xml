<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    >

    <TextView
        android:id="@+id/txtTask1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/architects_daughter"
        android:gravity="center_horizontal"
        android:text="List Unfinish Tasks"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="32sp" />
    <androidx.appcompat.widget.SearchView
        android:id="@+id/searchViewSuccess1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtTask1"
        android:hint="Nhập vào từ cần tìm kiếm">


    </androidx.appcompat.widget.SearchView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/taskRecycleViewSuceess1"
        android:layout_width="match_parent"
        android:layout_height="640dp"
        android:layout_below="@id/searchViewSuccess1"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />



</RelativeLayout>